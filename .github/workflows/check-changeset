name: Check if changeset is present
on:
  workflow_dispatch:
  pull_request:
    branches: [main, next]
    paths:
      - 'packages/cli'
      - 'packages/css'
      - 'packages/react'
      - 'packages/theme'
jobs:
  checks:
    name: Check if changeset is present
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Check if changeset is present since main
        run: yarn changeset status --since=main
